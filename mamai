    <script>
        // Floating hearts animation
        document.querySelectorAll('.heart').forEach(heart => {
            heart.style.top = Math.random() * 80 + '%';
            heart.style.animationDelay = Math.random() * 2 + 's';
        });

        // Message reveal function
        function showMessage(id) {
            document.querySelectorAll('.message-box').forEach(box => {
                box.style.display = 'none';
            });
            document.getElementById(id).style.display = 'block';
        }

        // Love Game
        let love = 0;
        function startLoveGame() {
            document.getElementById('love-game').style.display = 'block';
        }

        function fillLoveMeter() {
            love = Math.min(love + 10, 100);
            document.getElementById('love-progress').style.width = love + '%';
            
            if(love === 100) {
                alert("I love you 100%! â¤ï¸ Here's your real gift: [Insert gift hint]");
            }
        }

        // Photo Album
        function showPhotoAlbum() {
            document.getElementById('photo-album').style.display = 'grid';
        }

        // Konami Code Easter Egg (â†‘â†‘â†“â†“â†â†’â†â†’BA)
        let konamiCode = ['ArrowUp','ArrowUp','ArrowDown','ArrowDown','ArrowLeft','ArrowRight','ArrowLeft','ArrowRight','KeyB','KeyA'];
        let konamiIndex = 0;
        
        document.addEventListener('keydown', (e) => {
            if(e.code === konamiCode[konamiIndex]) {
                konamiIndex++;
                if(konamiIndex === konamiCode.length) {
                    document.getElementById('secret').style.display = 'block';
                    konamiIndex = 0;
                }
            } else {
                konamiIndex = 0;
            }
        });

        // Confetti effect
        function shootConfetti() {
            const duration = 3000;
            const end = Date.now() + duration;

            (function frame() {
                confetti({
                    particleCount: 7,
                    angle: 60,
                    spread: 55,
                    origin: { x: 0 },
                    colors: ['#ff4081', '#ff79b0', '#ffffff']
                });
                confetti({
                    particleCount: 7,
                    angle: 120,
                    spread: 55,
                    origin: { x: 1 },
                    colors: ['#ff4081', '#ff79b0', '#ffffff']
                });

                if(Date.now() < end) {
                    requestAnimationFrame(frame);
                }
            }());
        }

        // Initial confetti
        shootConfetti();
    </script>
    <!-- Add confetti library -->
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
